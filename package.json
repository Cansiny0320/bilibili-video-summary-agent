{
  "name": "bili-summary",
  "version": "1.1.0",
  "type": "module",
  "packageManager": "pnpm@10.25.0",
  "description": "CLI tool to summarize Bilibili videos via subtitles or audio transcription using LLMs",
  "author": "Cansiny0320",
  "license": "MIT",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cansiny0320/bilibili-video-summary-agent.git"
  },
  "bugs": {
    "url": "https://github.com/Cansiny0320/bilibili-video-summary-agent/issues"
  },
  "homepage": "https://github.com/Cansiny0320/bilibili-video-summary-agent#readme",
  "keywords": [
    "bilibili",
    "summary",
    "cli",
    "subtitle",
    "transcription",
    "openai"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "bili-summary": "dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsx src/index.ts",
    "lint": "eslint",
    "prepublishOnly": "nr build",
    "release": "bumpp",
    "start": "node dist/index.mjs",
    "test": "vitest",
    "typecheck": "tsc",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.6.1",
    "@antfu/ni": "^28.0.0",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^25.0.3",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "publint": "^0.3.16",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.17.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "dependencies": {
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.13.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "fluent-ffmpeg": "^2.1.3",
    "openai": "^6.15.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  }
}
